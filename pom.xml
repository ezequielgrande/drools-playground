
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.plugtree.training</groupId>
  <artifactId>droolsjbpm-training</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>Drools &amp; jBPM Training</name>

  <properties>
    <drools.version.5>5.5.0.Final</drools.version.5>
    <jbpm.version.5>5.4.0.Final</jbpm.version.5>
    <drools.version.6>6.0.0.CR1</drools.version.6>
    <jbpm.version.6>6.0.0.CR1</jbpm.version.6>
  </properties>

  <modules>
    <module>droolsjbpm5-quickstart</module>
    <module>droolsjbpm6-quickstart</module>
    <module>drools5-introduction</module>
    <module>conditional-elements</module>
    <module>rule-attributes</module>
    <module>drools6-introduction</module>
    <module>backward-chaining</module>
    <!--module>04-DroolsExpert-Spreadsheet</module>
    <module>05-DroolsExpert-DSLSimple</module>
    <module>06-DroolsExpert-KnowledgeAgent</module>
    <module>08-DroolsExpert-ValidationExample</module>
    <module>09-DroolsExpert-RETEnetworkExamples</module-->
  </modules>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <configuration>
            <source>1.6</source>
            <target>1.6</target>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
    
  <repositories>
    <repository>
      <id>jboss</id>
      <name>jboss</name>
      <url>https://repository.jboss.org/nexus/content/groups/public/</url>
    </repository>
  </repositories>

</project>

