<?xml version="1.0"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://jboss.org/schema/arquillian"
    xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
 
    <container qualifier="jbossas" default="true">
        <configuration>
            <property name="jbossHome">./target/jboss-as/jboss-as-7.1.1.Final</property>
            <property name="bundlePath">./target/jboss-as/jboss-as-7.1.1.Final/bundles</property>
            <property name="modulePath">./target/jboss-as/jboss-as-7.1.1.Final/modules</property>
            <property name="javaVmArguments">-Xms512m -Xmx1024m -XX:MaxPermSize=256M</property>
        </configuration>
        <!--protocol type="Servlet 3.0">
            <property name="host">localhost</property>
            <property name="port">8181</property>
        </protocol-->
    </container>
 
</arquillian>

